#include<iostream>
#include<cmath>
using namespace std;
int main()
{
	int n, j, i;
	double h, b, x, Res;
	double a[4];
	for (j = 1; j <= 3; j++) {
		cout << "a" << j << "= ";
		cin >> a[j];
	}

	cout << "Enter n: ";
	cin >> n;

	cout << "Enter h: ";
	cin >> h;

	cout << "Enter b: ";
	cin >> b;
	cout << endl;
	double max, min;
	max = INT_MIN;
	min = INT_MAX;

	for (j = 1; j <= 3; j++)
	{
		cout << "a" << j << endl;
		for (i = 0; i < n; i++) {
			x = b + i * h;
			if (a >= 0)
				Res = x * cos(a[j] - x + 1);
			else
				Res = 2 * cos(a[j] + x);

			if (Res < 0)
				Res = Res * -1;


			if (max < Res)
				max = Res;
			if (min > Res)
				min = Res;
			cout << "F (a" << j << ",x[" << i << "]) = " << Res << endl;
		}
		cout << endl;
	}
	cout << "MAX = " << max << endl;
	cout << "MIN = " << min << endl;

	return 0;
}
